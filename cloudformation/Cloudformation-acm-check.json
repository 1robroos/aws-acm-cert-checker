{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Create acm check lambda",
    "Resources": {
        "LambdaExecutionRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Statement": [
                        {
                            "Action": [
                                "sts:AssumeRole"
                            ],
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "lambda.amazonaws.com"
                                ]
                            }
                        }
                    ],
                    "Version": "2012-10-17"
                },
                "Path": "/",
                "ManagedPolicyArns": ["arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole"],
                "Policies": [
                    {
                        "PolicyDocument": {
                            "Version": "2012-10-17",
                            "Statement": [
                                {
                                    "Action": "s3:GetObject",
                                    "Effect": "Allow",
                                    "Resource": "arn:aws:s3:::kfsolutions-code-eu-central-1/acmcheck/*"
                                },
                                {
                                    "Action": [
                                        "ec2:DescribeRegions",
                                        "acm:ListCertificates",
                                        "acm:DescribeCertificate",
                                        "SNS:Publish"
                                        ],
                                    "Effect": "Allow",
                                    "Resource": "*"
                                }
                            ]
                        },
                        "PolicyName": "root"
                    }
                ]
            }
        },
        "LambdaFunction": {
            "Type": "AWS::Lambda::Function",
            "Properties": {
                "FunctionName":"acm-check",
                "Environment":
                {
                    "Variables" : {ALERT_METHOD : SNS, SNS_ARN : arn:aws:sns:eu-central-1:969526043371:kfsolutions-email}
                },
                "Code": {
                    "S3Bucket": "kfsolutions-code-eu-central-1",
                    "S3Key": "acmcheck/deployment.zip"
                },
                "Handler": "lambda.lambda_handler",
                "MemorySize": 128,
                "Role": {
                    "Fn::GetAtt": [
                        "LambdaExecutionRole",
                        "Arn"
                    ]
                },
                "Runtime": "python3.8",
                "Timeout": 60
            }
        },
        "LambdaFunctionSchedule": {
            "Type": "AWS::Events::Rule",
            "Properties": {
                "ScheduleExpression": "cron(0 12 * * ? *)",
                "Targets": [
                    {
                        "Arn": {
                            "Fn::GetAtt": [
                                "LambdaFunction",
                                "Arn"
                            ]
                        },
                        "Id": "1"
                    }
                ]
            }
        },
        "LambdaFunctionCwPermission": {
            "Type": "AWS::Lambda::Permission",
            "Properties": {
                "Action": "lambda:InvokeFunction",
                "FunctionName": {
                    "Fn::GetAtt": [
                        "LambdaFunction",
                        "Arn"
                    ]
                },
                "Principal": "events.amazonaws.com",
                "SourceArn": {
                    "Fn::GetAtt": [
                        "LambdaFunctionSchedule",
                        "Arn"
                    ]
                }
            }
        }
    }
}
